// https://www.typescriptlang.org/tsconfig
{
	"$schema": "https://json.schemastore.org/jsconfig.json",

	"compilerOptions": {
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "es2022" ],
		"module": "es2022",
		"moduleResolution": "node16",
		"resolveJsonModule": true,
		"strict": true,
		"target": "es2022"
	}
}
