// https://www.typescriptlang.org/tsconfig
{
	"$schema": "https://json.schemastore.org/jsconfig.json",

	"compilerOptions": {
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "es2015" ],
		"moduleResolution": "node16",
		"resolveJsonModule": true,
		"strict": true,
		"target": "es2015"
	}
}
