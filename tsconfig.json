{
	"$comment": "https://www.typescriptlang.org/tsconfig",
	"$schema": "https://json.schemastore.org/tsconfig.json",

	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"declarationDir": "./build/types",
		"esModuleInterop": true,
		"lib": [ "es2021" ],
		"module": "node16",
		"outDir": "./build",
		"paths": {
			"/*": [ "*" ]
		},
		"strict": true,
		"target": "es2021"
	},
	"include": [ "./source" ]
}
