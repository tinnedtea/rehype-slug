{
	"$comment": "https://www.typescriptlang.org/tsconfig",
	"$schema": "https://json.schemastore.org/tsconfig.json",

	"compilerOptions": {
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [ "es2021" ],
		"module": "es2020",
		"moduleResolution": "node16",
		"outDir": "./build",
		"strict": true,
		"target": "es2021"
	},
	"include": [ "./source/**/*" ]
}
